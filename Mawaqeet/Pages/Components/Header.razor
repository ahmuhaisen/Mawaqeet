<div class="row border-bottom border-secondary">
    <div class="col-md-7">
        <p class="fs-4 fw-bold">
            <span>@(Date.hijri.weekday.ar)،</span>
            <span>@($"{Date.hijri.day} {Date.hijri.month.ar}")</span>
            <span class="px-2">|</span>
            <span>@CurrentTimeString</span>
        </p>
        <p class="fs-1 fw-bold">
            <span>
                <i class="bi bi-geo-alt-fill"></i>
            </span>
            <span>
                @CurrentAddress
            </span>
        </p>
    </div>
    <div class="col-md-5 d-flex justify-content-end align-items-center">
        <div>
            <p class="fs-6 m-0">
                <i class="bi bi-stopwatch mx-1"></i>
                <span>متبقي حتى صلاة</span>
                <span>@NextSalah?.Name</span>
            </p>
            <p class="fs-1 fw-bold">
                @if (NextSalah is not null)
                {
                    <span>@NextSalahRemainingTime</span>
                    <span class="fs-3 fw-bold">س</span>
                }
            </p>
        </div>
    </div>
</div>


@code {
    [Parameter]
    public string CurrentAddress { get; set; } = string.Empty;
    [Parameter]
    public string CurrentTimeString { get; set; } = string.Empty;
    [Parameter]
    public string NextSalahRemainingTime { get; set; } = string.Empty;

    [Parameter]
    public Date Date { get; set; } = new Date();

    [Parameter]
    public Salah? NextSalah { get; set; } = new Salah();
}
